@model OnlineStore.Models.LoginModel;

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4">
            <br />
            <h4 class="text-center">Для просмотра требуется авторизация</h4>
            <br />
            <form asp-action="Login" asp-controller="Admin" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <br />
                <h3 class="text-center">Вход</h3>
                <div class="form-group">
                    <label asp-for="Login">Введите Логин</label>
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col" style="display: flex;justify-content: start;align-items: center;">
                        <input type="submit" value="Войти" class="btn btn-outline-dark" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>