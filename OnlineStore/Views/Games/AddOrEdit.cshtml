@model OnlineStore.Models.Game;

@{
	Layout = null;
}

    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Категория</label>
                    <input asp-for="ShortDesc" class="form-control" />
                    <span asp-validation-for="ShortDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Длинное описание</label>
                    <input asp-for="LongDesc" class="form-control" />
                    <span asp-validation-for="LongDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Путь к изображению</label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Цена</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Есть ли в наличии</label>
                    <input asp-for="Avaliable" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Подтвердить" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}